VERSION = "0.13.2"
STAGE = ""
RELEASE_DATE = "2008-02-13"
SVN_REVISION = proc {
                 vers = `svnversion`
                 rev = $?.success? ? vers.strip : 'unknown'
                 if rev == 'exported' 
                   ma = /\$Revision:\s*(\d+)\s*\$/.match("$Revision: 2192 $")
                   rev = ma ? ma[1] : 'unknown'
                 end
                 rev
               }.call
